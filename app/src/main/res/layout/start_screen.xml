<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              tools:ignore="NestedWeights"> <!-- Suppress nested weights warning - noncritical -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/createNew"
            android:drawableLeft="@drawable/ic_file_plus_1703"
            android:enabled="false"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/btnOpen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/open"
            android:drawableLeft="@drawable/ic_directory_search_1623"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recentItemsList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/recent"
                android:enabled="false"
                style="?android:attr/buttonBarButtonStyle"/>

        <Button
                android:id="@+id/btnOption"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/settings"
                android:enabled="false"
                android:drawableLeft="@drawable/ic_settings_1389"
                style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

</LinearLayout>