<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="hide_passwords"
        android:summary="@string/pref_description_hide_passwords_and_secrets"
        android:title="@string/pref_title_hide_password_and_secrets" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="toggle_password_visibility_via_icon"
        android:dependency="hide_passwords"
        android:summary="@string/pref_description_toggle_password"
        android:title="@string/pref_title_toggle_password" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="lock_after_screen_turn_off"
        android:summary="@string/pref_description_lock_after_screen_turn_off"
        android:title="@string/pref_title_lock_after_screen_turn_off" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="lock_after_application_to_background"
        android:summary="@string/pref_description_lock_after_application_to_background"
        android:title="@string/pref_title_lock_after_application_to_background" />

    <ListPreference
        android:defaultValue="180"
        android:entries="@array/pref_auto_lock_titles"
        android:entryValues="@array/pref_auto_lock_values"
        android:key="auto_lock"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_auto_lock" />

</PreferenceScreen>
